from fastapi import FastAPI
from src.config import config
from src.routers import health_check
{{#if (includesAny dependencies "jose" "passlib")}}
from src.routers import authentication_router
{{/if}}

app = FastAPI(
    title=config.app_name,
    version=config.version
)

# Include routers
app.include_router(health_check.router, tags=["health"])
{{#if (includesAny dependencies "jose" "passlib")}}
app.include_router(
    authentication_router.router,
    prefix="/api/v1/auth",
    tags=["authentication"]
)
{{/if}}

@app.get("/")
async def root():
    return {
        "message": f"Welcome to {config.app_name}",
        "version": config.version
    }

if __name__ == "__main__":
    import uvicorn
    uvicorn.run(
        "src.main:app",
        host="0.0.0.0",
        port=8000,
        reload=config.debug
    )
